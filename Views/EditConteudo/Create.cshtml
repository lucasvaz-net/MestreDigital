@model MestreDigital.Model.Conteudo
@{
    ViewBag.Title = "Novo Conteúdo";
}
<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            padding: 20px;
        }

        form {
            max-width: 600px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        textarea {
            resize: vertical;
        }

        button {
            margin-right: 10px;
        }
    </style>
</head>

<body>
    <h2>Criar Novo Conteúdo</h2>
    <div class="card">
        <form asp-action="Create" method="post" class="w-100">
        <div class="form-group">
            <label asp-for="Titulo">Título</label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descricao">Descrição</label>
            <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Link">Link</label>
            <input asp-for="Link" class="form-control" />
            <span asp-validation-for="Link" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Texto">Texto</label>
            <textarea asp-for="Texto" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Texto" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SubcategoriaID">Subcategoria</label>
            <select asp-for="SubcategoriaID" asp-items="ViewBag.Subcategorias" class="form-control">
                <option value="">Selecione uma subcategoria</option>
            </select>
            <span asp-validation-for="SubcategoriaID" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="hidden" name="actionType" value="I" />
            <br />
            <button type="submit" class="btn btn-success">Criar</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/5.0.0/js/bootstrap.min.js" integrity="sha384-MbTY+MAgV4XNz4o4lF4lPTTJKPIFWePhffR4FprB5Ciw5KDu5Td4jK0rEi8bp4Ii" crossorigin="anonymous"></script>
</body>
</html>
