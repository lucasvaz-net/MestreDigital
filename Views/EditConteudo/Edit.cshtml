@model MestreDigital.Model.Conteudo

@{
    ViewBag.Title = "Editar Conteúdo";
}

<h2>Editar Conteúdo</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ConteudoID" />

    <div class="form-group">
        <label asp-for="Titulo">Título</label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Descricao">Descrição</label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SubcategoriaID">Subcategoria</label>
        <select asp-for="SubcategoriaID" asp-items="ViewBag.Subcategorias" class="form-control">
            <option value="">Selecione uma subcategoria</option>
        </select>
        <span asp-validation-for="SubcategoriaID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Link">Link</label>
        <input asp-for="Link" class="form-control" />
        <span asp-validation-for="Link" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Texto">Texto</label>
        <textarea asp-for="Texto" class="form-control"></textarea>
        <span asp-validation-for="Texto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
